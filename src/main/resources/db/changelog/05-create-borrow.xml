<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="5" author="lekha">
        <createTable tableName="borrow">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_borrow_user" references="users(id)"/>
            </column>
            <column name="book_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_borrow_book" references="book(id)"/>
            </column>
            <column name="borrow_date" type="DATE"/>
            <column name="return_date" type="DATE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>

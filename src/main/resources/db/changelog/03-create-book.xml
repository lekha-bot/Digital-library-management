<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="lekha">
        <createTable tableName="book">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="isbn" type="VARCHAR(50)" />
            <column name="category" type="VARCHAR(100)"/>
            <column name="availability_status" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_book_author" references="author(id)"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="add-available-to-book" author="lekha">
        <addColumn tableName="book">
            <column name="available" type="boolean" defaultValueBoolean="true"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
